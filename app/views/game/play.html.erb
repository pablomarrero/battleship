<div class="container">
  <div class="well">
    <h3>Welcome to the Battle</h3>
    <p>You are logued as player <%= @player %></p>
    <% if @game.id.nil? || @game.send("player#{@player}").nil?%>
      <p><strong>This is a new game, please put your ships on the board!!</strong></p>
      <%= form_tag controller: 'game', action: 'start', :html => { :class => '' } do  %>
	<form>
          <%= hidden_field_tag :game_id, @game.id %>
          <div class="row">
            <div class='col-sm-6'>
              <div class="form-group">
                <label for="ships_position_carrier">Ships Position Carrier </label>
                <%= text_field_tag :ships_position_carrier, nil, class: 'form-control', placeholder: 'Ships Positiongs Carrier' %>
              </div>
              <div class="form-group">
                <label for="ships_position_battleship">Ships Position Battleship </label>
                <%= text_field_tag :ships_position_battleship, nil, class: 'form-control', placeholder: 'Ships Positiongs Battleship' %>
              </div>
              <div class="form-group">
                <label for="ships_position_cruiser">Ships Position Cruiser </label>
                <%= text_field_tag :ships_position_cruiser, nil, class: 'form-control', placeholder: 'Ships Positiongs Cruiser' %>
              </div>
              <div class="form-group">
                <label for="ships_position_submarine">Ships Position Submarine </label>
                <%= text_field_tag :ships_position_submarine, nil, class: 'form-control', placeholder: 'Ships Positiongs Submarine' %>
              </div>
              <div class="form-group">
                <label for="ships_position_destroyer">Ships Position Destroyer </label>
                <%= text_field_tag :ships_position_destroyer, nil, class: 'form-control', placeholder: 'Ships Positiongs Destroyer' %>
              </div>
	    </div>
	  </div>
	  <div class="form-actions">
            <%= button_tag :submit %>
          </div>
	</form>
      <% end %>
    <% end %>
  </div>
</div>
